<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="deemark.inkoperated.com.smartbusmobile4.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_above="@+id/track_bus"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="45dp"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_menu_icon" />

    <EditText
        android:id="@+id/track_bus_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/track_bus"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Enter Bus Id"
        android:inputType="number"
        android:textAlignment="center" />

    <Button
        android:id="@+id/track_bus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="140dp"
        android:background="?attr/colorPrimary"
        android:text="Track"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
</RelativeLayout>
